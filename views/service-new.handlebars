<div class="container">
    <div class="row">
        <div class="col s12">
            <H3><b>NEW SERVICE</b></H3>
        </div>
    </div>
    <hr/>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <h6><b>DATA CUSTOMER</b></h6>
                </div>
                <div class="input-field col l4 m4 s12">
                    <input id="customer_name" type="text" class="validate">
                    <label for="customer_name">Nama</label>
                </div>
                <div class="input-field col l4 m4 s12">
                    <input id="customer_phone" type="text" class="validate">
                    <label for="customer_phone">Telepon</label>
                </div>
                <div class="input-field col l4 m4 s12">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Alamat</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <h6><b>DATA KENDARAAN</b></h6>
                </div>
                <div class="input-field col l4 m4 s12">
                    <input id="customer_jeniskendaraan" type="text" class="validate">
                    <label for="customer_jeniskendaraan">Jenis Kendaraan</label>
                </div>
                <div class="input-field col l4 m4 s12">
                    <input id="customer_nopol" type="text" class="validate">
                    <label for="customer_nopol">NOPOL</label>
                </div>
                <div class="input-field col l4 m4 s12">
                    <input id="customer_tahunkendaraan" type="text" class="validate">
                    <label for="customer_tahunkendaraan">Tahun Kendaraan</label>
                </div>
                <div class="input-field col l6 m6 s12">
                    <input id="customer_norangka" type="text" class="validate">
                    <label for="customer_norangka">Nomor Rangka</label>
                </div>
                <div class="input-field col l6 m6 s12">
                    <input id="customer_nomesin" type="text" class="validate">
                    <label for="customer_nomesin">Nomor Mesin</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <h6><b>PERMINTAAN / KELUHAN</b></h6>
                </div>
                <div class="input-field col s12">
                    <textarea id="customer_request" class="materialize-textarea"></textarea>
                    <label for="customer_request">Permintaan / Keluhan</label>
                </div>
            </div>
            
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn btn-large waves-effect waves-light" type="submit" name="action">DAFTAR
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>